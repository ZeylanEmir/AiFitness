<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AiFitness.NWorkout">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Тренировка от нейросети &#127941;" TextColor="Black" HorizontalOptions="Start" FontFamily="Roboto" FontAttributes="Bold" Margin="25,10,0,0" FontSize="30"/>
            <Label Text="Введите Ваши предпочтения к тренировке и нажмите на кнопку" TextColor="Black" HorizontalOptions="Start" FontFamily="Roboto" FontAttributes="Bold" Margin="25,10,0,0" FontSize="15"/>

            <Picker x:Name="timePicker" Title="Сколько будете тренироваться?"/>
            <Picker x:Name="musclePicker" Title="Что будете тренировать?"/>
            <Picker x:Name="equipmentPicker" Title="Какой у Вас инвентарь?"/>
            <Picker x:Name="fitnessLevelPicker" Title="Ваш уровень подготовки?"/>
            <Picker x:Name="fitnessGoalsPicker" Title="Цель ваших тренировок?"/>
            <Button Text="Создать тренировку" Clicked="Button_Result"/>

            <ScrollView x:Name="scroll">
                <Label x:Name="result" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
